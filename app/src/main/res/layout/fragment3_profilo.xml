<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profilo.profilo_fragment3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classifica"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/latobold"
                android:textColor="@color/nero_testo"
                android:textSize="13pt"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effettua monitoraggi accumula punti e raggiungi la testa della classifica!"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/latoregular"
                android:textSize="7pt"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/grigio" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:background="@drawable/rettangolo"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:text="POS"
                    android:autoSizeTextType="uniform"
                    android:padding="3dp"
                    android:fontFamily="@font/latobold"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="NOME"
                    android:autoSizeTextType="uniform"
                    android:padding="3dp"
                    android:fontFamily="@font/latobold"
                    android:textAlignment="gravity"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="PAESE"
                    android:autoSizeTextType="uniform"
                    android:padding="3dp"
                    android:fontFamily="@font/latobold"
                    android:textAlignment="gravity"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="83dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="PUNTI"
                    android:autoSizeTextType="uniform"
                    android:padding="3dp"
                    android:fontFamily="@font/latobold"
                    android:textAlignment="gravity"
                    android:gravity="center"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp">

                <LinearLayout android:id="@+id/posClassificaUtente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="#8CD7F7"
                    android:gravity="center">




                </LinearLayout>


            </androidx.cardview.widget.CardView>

                <LinearLayout android:id="@+id/classifica"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/rettangolo"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="200dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                </LinearLayout>









        </LinearLayout>

    </LinearLayout>



</FrameLayout>